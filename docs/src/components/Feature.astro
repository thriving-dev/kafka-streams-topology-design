---
import { Icon } from 'astro-icon/components'

interface Props {
  title: string;
  icon?: string;
  iconColor?: string;
  classAppend?: string;
}

const {
    title,
    icon = "mdi:check-circle",
    iconColor = "text-green-600",
    classAppend = "",
} = Astro.props;
---

<div class:list={[`kstd-feature !mt-0 flex flex-row`].concat(classAppend.split(/\s+/))}>
    <div class="flex justify-center shrink-0">
        <div class="mr-2 mr-4 rtl:ml-2 rtl:md:ml-2 rtl:mr-0 !mt-0">
            <Icon name={icon} class:list={`icon w-8 h-8 min-[800px]:w-9 min-[800px]:h-9 ${iconColor}`}/>
        </div>
    </div>
    <div class="!mt-0.5 md:!mt-1">
        { title && <div class="title !mb-2 font-bold text-lg md:text-xl">{title}</div> }
        <div class="content !mt-0 [&>p]:!mt-2 [&>p:first-child]:!mt-0">
            <slot />
        </div>
    </div>
</div>
